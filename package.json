{
  "name": "@kieran-osgood/scribe",
  "version": "0.2.0",
  "description": "Scribe is a file templating CLI based on Mustache Templates.",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "scribe": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kieran-osgood/scribe.git"
  },
  "homepage": "https://github.com/kieran-osgood/scribe/#readme",
  "bugs": "https://github.com/kieran-osgood/scribe/issues",
  "license": "MIT",
  "keywords": [
    "cli",
    "typescript"
  ],
  "scripts": {
    "start": "bun index.ts",
    "test": "bun run bundle && chmod +x ./dist/index.js && vitest",
    "lint": "eslint .",
    "typecheck": "tsc",
    "bundle": "bun build --target='node' --compile --minify --entrypoints index.ts --outfile=./dist/index.js",
    "ci": "run-s ci:*",
    "ci:typecheck": "bun typecheck",
    "ci:lint": "bun lint",
    "ci:test": "bun bundle && && chmod +x ./dist/index.js && vitest",
    "release": "run-s release:*",
    "release:ci": "pnpm run ci",
    "release:publish": "changeset publish",
    "changeset": "changeset",
    "postinstall": "patch-package",
    "size": "bun bundle && size-limit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@effect/schema": "^0.48.4",
    "case-anything": "^2.1.13",
    "clipanion": "^3.2.1",
    "colorette": "^2.0.20",
    "cosmiconfig": "latest",
    "cosmiconfig-typescript-loader": "latest",
    "effect": "2.0.0-next.55",
    "glob": "^10.3.10",
    "inquirer": "8.0.0",
    "mkdirp": "^3.0.1",
    "simple-git": "^3.19.1",
    "strip-ansi": "^7.1.0",
    "template-file": "^6.0.1",
    "typanion": "^3.13.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@effect/language-service": "^0.0.21",
    "@expo/spawn-async": "^1.7.2",
    "@size-limit/file": "^8.2.6",
    "@swc/core": "^1.3.69",
    "@swc/helpers": "^0.5.1",
    "@total-typescript/ts-reset": "^0.3.7",
    "@tsconfig/node18": "^1.0.3",
    "@types/inquirer": "^9.0.3",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/coverage-istanbul": "^0.31.4",
    "@vitest/ui": "^0.33.0",
    "bun-types": "^1.0.15",
    "changeset": "^0.2.6",
    "eslint": "^8.55.0",
    "eslint-plugin-communist-spelling": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "fast-check": "^3.13.2",
    "get-stream": "^7.0.1",
    "husky": "^8.0.3",
    "memfs": "latest",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.1",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.8",
    "size-limit": "^8.2.6",
    "tempy": "^3.1.0",
    "terser": "^5.19.0",
    "vite": "^4.4.4",
    "vite-node": "^0.29.8",
    "vitest": "0.33.0"
  },
  "size-limit": [
    {
      "path": "dist/main.js",
      "limit": "10 kb"
    }
  ],
  "prettier": {
    "semi": true,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:@typescript-eslint/stylistic-type-checked"
    ],
    "ignorePatterns": [
      "examples",
      "dist",
      "node_modules",
      "html"
    ],
    "root": true,
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": true
    },
    "plugins": [
      "@typescript-eslint",
      "communist-spelling",
      "simple-import-sort"
    ],
    "rules": {
      "@typescript-eslint/no-misused-promises": "error",
      "@typescript-eslint/promise-function-async": "error",
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/consistent-type-definitions": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "communist-spelling/communist-spelling": "error",
      "no-unused-vars": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "semi": [
        "error",
        "always"
      ],
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "pnpm": {
    "patchedDependencies": {
      "clipanion@3.2.1": "patches/clipanion@3.2.1.patch"
    }
  }
}
