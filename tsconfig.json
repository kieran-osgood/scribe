{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "paths": {
      "@scribe/core": [
        "src/common/core/index"
      ],
      "@scribe/config": [
        "src/config/index"
      ],
      "@scribe/reader": [
        "src/reader/index"
      ],
      "@scribe/git": [
        "src/git/index"
      ],
      "@scribe/commands": [
        "src/commands/index"
      ],
      "@scribe/fs": [
        "src/common/fs/index"
      ]
    },
    "lib": [
      "ESNext"
    ],
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    // Eases ESM support
    "types": [
      "node",
      "vitest/globals"
    ],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "@unsplash/ts-namespace-import-plugin",
        "namespaces": {
          "Effect": {
            "importPath": "@effect/io/Effect"
          },
          "RA": {
            "importPath": "@scribe/core"
          }
        }
      },
    ]
  },
  "exclude": [
    "examples/**/*.*"
  ],
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
}
