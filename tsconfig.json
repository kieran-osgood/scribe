{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "outDir": "dist",
    "declaration": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    // "bun-types" is the important part
    "types": [
      "vitest/globals",
      "bun-types"
    ],
    "lib": ["ESNext"],
    "target": "ESNext",
//    "target": "ES2022",
    "paths": {
      "@scribe/adapters": [
        "src/adapters/index"
      ],
      "@scribe/config": [
        "src/config/index"
      ],
      "@scribe/reader": [
        "src/reader/index"
      ],
      "@scribe/git": [
        "src/git/index"
      ],
      "@scribe/commands": [
        "src/commands/index"
      ],
      "@scribe/fs": [
        "src/common/fs/index"
      ],
      "@scribe/cli": [
        "src/cli/index"
      ],
      "@scribe/services": [
        "src/services/index"
      ]
    },
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      },
      {
        "name": "@unsplash/ts-namespace-import-plugin",
        "namespaces": {
          "Effect": {
            "importPath": "@effect/io/Effect"
          }
        }
      }
    ]
  },
  "include": [
    ".eslintrc.js",
    "."
  ],
  "exclude": [
    "examples",
    "public/base.ts",
    "dist"
  ]
}
