{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
  ]
}
